<?xml version="1.0" encoding="utf-8"?>
<com.amazon.tv.leanbacklauncher.ActiveFrame xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingBottom="@dimen/group_vertical_spacing">

    <androidx.leanback.widget.NonOverlappingLinearLayout
        android:id="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_height"
        android:clipChildren="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/row_padding"
        android:paddingBottom="@dimen/header_text_margin">

        <ImageView
            android:id="@id/icon"
            android:layout_width="@dimen/header_height"
            android:layout_height="fill_parent"
            android:layout_gravity="start|center"
            android:scaleType="fitStart"
            android:visibility="gone" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="start|center"
            android:fontFamily="@string/font"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:text="@string/category_label_apps"
            android:textColor="@color/row_label_text_color"
            android:textSize="@dimen/header_text_size" />
    </androidx.leanback.widget.NonOverlappingLinearLayout>


    <com.amazon.tv.leanbacklauncher.ActiveItemsRowView
        android:id="@id/list"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/temp_max_row_height"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:gravity="top"
        android:paddingStart="@dimen/row_padding"
        android:paddingEnd="@dimen/row_padding" />
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:alpha="0.45"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/lb_grey"
        android:background="@drawable/border_buttons"
        android:orientation="vertical"
        android:focusable="false"
        android:visibility="visible">

<androidx.cardview.widget.CardView
    android:layout_width="300dp"
    android:layout_height="155dp"
    android:layout_marginLeft="5dp"
    android:focusable="true"
    android:layout_marginTop="5dp"
    android:outlineAmbientShadowColor="@color/lb_grey"
    android:backgroundTint="@color/black_opaque"
    android:elevation="5dp">
        <WebView
            android:id="@+id/webview1"
            android:layout_width="290dp"
            android:layout_height="145dp"
            android:elevation="15dp"
            android:layout_marginTop="5dp"
            android:requiresFadingEdge="vertical"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:background="@color/exo_white"
            android:focusable="false" />
            />
</androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="155dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:outlineAmbientShadowColor="@color/lb_grey"
            android:backgroundTint="@color/black_opaque"
            android:focusable="true"
            android:elevation="5dp">

        <WebView
            android:id="@+id/webview2"
            android:layout_width="290dp"
            android:layout_height="145dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:elevation="15dp"
            android:layout_centerHorizontal="true"
            android:background="@color/exo_white"
            android:focusable="false" />
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="155dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:focusable="true"
            android:layout_marginTop="5dp"
            android:outlineAmbientShadowColor="@color/lb_grey"
            android:backgroundTint="@color/black_opaque"
            android:elevation="5dp">
        <WebView
            android:id="@+id/webview3"
            android:layout_width="290dp"
            android:layout_height="145dp"
            android:layout_marginTop="5dp"
            android:background="@color/exo_white"
            android:elevation="15dp"
            android:layout_marginLeft="5dp"
            android:focusable="false" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</com.amazon.tv.leanbacklauncher.ActiveFrame>
